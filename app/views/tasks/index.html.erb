<h1>Welcome to Hallitrons Task Center</h1>

<h3> <%= link_to "Create new task", new_task_path %></h3>

<ul><% @tasks.each do |task| %>
  <li>
    <h2><%= "Task name: #{task.title}" %></h2>
    <p> <%= " Solo task: #{task.solo == true ? 'Yes' : 'No'}" %></p>
    <p><%= " This is #{task.hypothetical == true ? 'not' : ''} a hypothetical task" %>
    </p>
    <%= link_to "Edit this task", edit_task_path(task) %>
    <%= link_to "Delete this task", task_path(task), method: :delete %>
  </li>
  <% end %>
</ul>
